n=int(input('enter a num'))
for i in range(1,n+1):
    for k in range(0,n+1-i):
        print("",end=' ')
    for j in range(1,i+1):
       print("*",end=' ')
    print()
for i in range(1,n+1):
    for k in range(0,i+1):
        print("",end=' ')
    for j in range(1,n+1-i):
       print("*",end=' ')
    print()
